{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-desktop",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/uno_palyground/uno_palyground.csproj",
        "/property:GenerateFullPaths=true",
        "/property:TargetFramework=net9.0-desktop",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "publish-desktop",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/uno_palyground/uno_palyground.csproj",
        "/property:GenerateFullPaths=true",
        "/property:TargetFramework=net9.0-desktop",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
